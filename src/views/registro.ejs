<!doctype html>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<html lang="es">
<body >
	<div>
		<h2>Registro de Usuarios</h2>
	</div>
    <form action="/registro" method="post" >
        <div>
            <p><input  type="text" name="name" value="<%= typeof old != 'undefined' ? old.name : '' %>"></p>
            <% if (locals.errors && errors.name) { %>
                <span><%= errors.name.msg %></span>
            <%}%>
        </div>
        <div>
            <label for="email">correo Electrónico</label>
            <p><input type="email" name="email" value="<%= typeof old != 'undefined' ? old.email : '' %>" ></p>
            <% if (locals.errors && errors.email) { %>
                <span>
                    <%= errors.email.msg %>
                </span>
            <%}%>
        </div>
        <div>
            <label for="password">Contraseña</label>
            <p><input type="password" name="password"></p>
            <% if (locals.errors && errors.password) { %>
                <span><%= errors.password.msg %></span>
            <%}%>
        </div>
        <div>
            <label for="password">Confirmar Contraseña</label>
            <p><input type="password" name="confirm_password"></p>
            <% if (locals.errors && errors.confirm_password) { %>
                <span><%= errors.password.msg %></span>
            <%}%>
        </div>        
        <div class="form-group">
            <button type="submit">Registrarse</button>
        </div>
    </form>
</body>
</html>