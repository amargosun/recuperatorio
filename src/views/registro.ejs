<!doctype html>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<html lang="es">
<body >
	<div>
		<h2>Registro de Usuarios</h2>
	</div>
    <form action="/registro" method="post" >
        <div>
            <label for="name">Apellido y Nombre</label>
            <span><input  type="text" name="name" value="<%= typeof old != 'undefined' ? old.name : '' %>" required></span>
            <% if (locals.errors && errors.name) { %>
                <span style="color: red;"><%= errors.name.msg %></span>
            <%}%>
        </div>
        <br>
        <div>
            <label for="email">Correo Electrónico</label>
            <span><input type="email" name="email" value="<%= typeof old != 'undefined' ? old.email : '' %>" required ></span>
            <% if (locals.errors && errors.email) { %>
                <span style="color: red;"><%= errors.email.msg %></span>
            <%}%>
        </div>
        <br>
        <div>
            <label for="password">Contraseña</label>
            <span><input type="password" name="password" required></span>
            <% if (locals.errors && errors.password) { %>
                <span style="color: red;"><%= errors.password.msg %></span>
            <%}%>
        </div>
        <br>
        <div>
            <label for="password">Confirmar Contraseña</label>
            <span><input type="password" name="confirm_password" required></span>
            <% if (locals.errors && errors.confirm_password) { %>
                <span style="color: red;"><%= errors.password.msg %></span>
            <%}%>
        </div>        
        <br>
        <div >
            <button type="submit">Registrarse</button>
            <a href="/">volver a la lista</a>
        </div>
    </form>
</body>
</html>