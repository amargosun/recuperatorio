<!doctype html>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
<body>
	<div>
		<h2>Ingreso de Usuarios</h2>
		<h4>Introduzca su e-mail y contraseña</h4>
	</div>
	<div>
		<form action="/login" method="post">
			<div>
				<label for="email">Correo Electrónico</label>
				<input type="email" name="email" value="<%= typeof old != 'undefined' ? old.email : '' %>" >
				<% if (locals.errors && errors.email) { %>
					<span style="color:red;"><%= errors.email.msg %></span>
				<%}%>
			</div>
			<br>
			<div>
				<label for="password">Contraseña</label>
				<input type="password" name="password" aria-label="Username">
				<% if(typeof(errors) != 'undefined' && errors.password){%>
				<span style="color: red;"><%= errors.password.msg %></span>
				<%}%>
			</div>
			<br>
			<div>
				<button type="submit" >Ingresar</button>
				<a href="/">volver a la lista</a>
			</div>
		</form>
	</div>
</body>
</html>